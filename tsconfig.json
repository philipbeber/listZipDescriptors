{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": false,
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "noUnusedLocals": false,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "target": "es2017",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "build",
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "webworker",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2017.object",
      "es2015.symbol",
      "es2017.string",
      "es2016.array.include"
    ]
  },
  "exclude": ["node_modules", "src/hackathon"]
}
